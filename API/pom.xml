<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>lib.brainsynder</groupId>
        <artifactId>BSLib</artifactId>
        <version>0.2.0</version>
    </parent>

    <description>Contains the BSLib code (Without NMS)</description>
    <artifactId>API</artifactId>
    <version>${module.version}</version>
    <packaging>jar</packaging>

    <properties>
        <maven.compiler.source>${java.version}</maven.compiler.source>
        <maven.compiler.target>${java.version}</maven.compiler.target>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <module.info>-api</module.info>

        <bstats.version>3.0.0</bstats.version>
        <minimal-json.version>0.9.5</minimal-json.version>
        <xseries.version>9.3.1</xseries.version>
    </properties>

    <repositories>
        <repository>
            <id>bs-nms</id>
            <url>https://repo.pluginwiki.us/repository/nms/</url>
        </repository>
        <repository>
            <id>CodeMC</id>
            <url>https://repo.codemc.org/repository/maven-public</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>org.spigotmc</groupId>
            <artifactId>spigot</artifactId>
            <version>${spigot.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.bstats</groupId>
            <artifactId>bstats-bukkit</artifactId>
            <version>${bstats.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.eclipsesource.minimal-json</groupId>
            <artifactId>minimal-json</artifactId>
            <version>${minimal-json.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.github.cryptomorin</groupId>
            <artifactId>XSeries</artifactId>
            <version>${xseries.version}</version>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>lib.brainsynder</groupId>
            <artifactId>nms_base</artifactId>
            <version>${internal.version}</version>
        </dependency>
        <!-- NMS Versions START -->
        <dependency>
            <groupId>lib.brainsynder</groupId>
            <artifactId>nms-1.17</artifactId>
            <version>${internal.version}</version>
        </dependency>
        <dependency>
            <groupId>lib.brainsynder</groupId>
            <artifactId>nms-1.17.1</artifactId>
            <version>${internal.version}</version>
        </dependency>
        <dependency>
            <groupId>lib.brainsynder</groupId>
            <artifactId>nms-1.18</artifactId>
            <version>${internal.version}</version>
        </dependency>
        <dependency>
            <groupId>lib.brainsynder</groupId>
            <artifactId>nms-1.18.1</artifactId>
            <version>${internal.version}</version>
        </dependency>
        <dependency>
            <groupId>lib.brainsynder</groupId>
            <artifactId>nms-1.18.2</artifactId>
            <version>${internal.version}</version>
        </dependency>
        <dependency>
            <groupId>lib.brainsynder</groupId>
            <artifactId>nms-1.19</artifactId>
            <version>${internal.version}</version>
        </dependency>
        <dependency>
            <groupId>lib.brainsynder</groupId>
            <artifactId>nms-1.19.1</artifactId>
            <version>${internal.version}</version>
        </dependency>
        <dependency>
            <groupId>lib.brainsynder</groupId>
            <artifactId>nms-1.19.2</artifactId>
            <version>${internal.version}</version>
        </dependency>
        <dependency>
            <groupId>lib.brainsynder</groupId>
            <artifactId>nms-1.19.3</artifactId>
            <version>${internal.version}</version>
        </dependency>
        <dependency>
            <groupId>lib.brainsynder</groupId>
            <artifactId>nms-1.19.4</artifactId>
            <version>${internal.version}</version>
        </dependency>
        <!-- NMS Versions END -->
    </dependencies>



    <build>
        <sourceDirectory>${basedir}/src/main/java</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.4.1</version>
                <configuration>
                    <createDependencyReducedPom>false</createDependencyReducedPom>
                    <shadedArtifactAttached>false</shadedArtifactAttached>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <relocations>
                                <relocation>
                                    <pattern>com.eclipsesource.json</pattern>
                                    <shadedPattern>lib.brainsynder.json</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.bstats</pattern>
                                    <shadedPattern>lib.brainsynder.metric</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.cryptomorin.xseries</pattern>
                                    <shadedPattern>lib.brainsynder.xseries</shadedPattern>
                                </relocation>
                            </relocations>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>